<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonsStyleLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/yp_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsTextStyleLight">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/yp_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SettingsTitleTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SettingsBackStyle">
        <item name="android:src">@drawable/arrow_back_img</item>
    </style>
    <style name="MainBackgroundStyle">
        <item name="android:background">@color/YPBlue</item>
    </style>
    <style name="SettingsIconShareStyle">
        <item name="android:src">@drawable/share_img</item>
    </style>
    <style name="SettingsIconSuppurtStyle">
        <item name="android:src">@drawable/support_img</item>
    </style>
    <style name="SettingsForvardStyle">
        <item name="android:src">@drawable/arrow_forvard_img</item>
    </style>
    <style name="SearchHintStyle">
        <item name="android:textColorHint">@color/YPTextGrey</item>
        <item name="android:drawableStart">@drawable/search_mini_img</item>
    </style>
</resources>
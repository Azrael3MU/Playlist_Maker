<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/AllBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".media.ui.MediaActivity">

    <ImageView
        android:id="@+id/btnBack"
        style="@style/SettingsBackStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="10dp"
        style="@style/SettingsTitleTextStyle"
        android:fontFamily="@font/yp_medium"
        android:textSize="22sp"
        android:textFontWeight="500"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMedia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        style="@style/AllBackground"
        app:tabTextAppearance="@style/MediaTabStile"
        app:tabIndicatorColor="@color/mediaTabIndicatorColor"
        app:tabTextColor="@color/media_text_inactive"
        app:tabSelectedTextAppearance="@color/media_text_active"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMedia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutMedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

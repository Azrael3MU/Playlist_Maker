<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AllBackground">

    <Button
        android:id="@+id/btnNewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ErrorEnternetButtonStyle"
        android:text="Новый плейлист"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:id="@+id/emptyPlaylistsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <ImageView
            android:id="@+id/ivPlaylistsPlaceholder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/media_placeholder"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvPlaylistsPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/empty_playlists"
            android:gravity="center"
            android:textAlignment="center"
            style="@style/MediaFragmentTextStyle"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
